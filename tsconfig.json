{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
